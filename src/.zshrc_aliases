#!/bin/zsh

# Aliases
# A list of useful shortcuts for common commands

# Shorter Django management commands
alias pym='python manage.py'

# Navigate up the directory tree quickly
alias ..='cd ..'
alias ...='cd ../..'
alias .4='cd ../../..'
alias .5='cd ../../../..'
alias .6='cd ../../../..'
alias .7='cd ../../../..'
alias .8='cd ../../../..'
alias .9='cd ../../../..'

# Kubectl Aliases
alias k='kubectl'
alias kcontext='kubectl config use-context'

# Update the "Laptop" software
alias lt-update='curl -o- https://raw.githubusercontent.com/ssmereka/laptop/main/src/mac | zsh'

# Update the Laptop software and reset the local configs to the default values
alias lt-reset='curl -o /tmp/laptop_mac https://raw.githubusercontent.com/ssmereka/laptop/main/src/mac && chmod +x /tmp/laptop_mac && /tmp/laptop_mac install -f'

# Display external IP address
alias lt-myip='curl ipinfo.io/ip'